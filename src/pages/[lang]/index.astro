---
import {i18nUtils} from '../../i18n/i18nUtils';
import {getRelativeLocaleUrl} from 'astro:i18n';

export async function getStaticPaths() {
    return [
        {params: {lang: 'de'}},
        {params: {lang: 'en'}}
    ];
}

const {lang} = Astro.params;
const translations = i18nUtils.getTranslations(lang);
const siteTitle = translations.common.siteTitle;
const siteDescription = translations.common.siteDescription;

const deUrl = getRelativeLocaleUrl('de');
const enUrl = getRelativeLocaleUrl('en');
import '../../styles/style.css';
import Head from '../../components/Head.astro';
---

<html lang={lang}>
<head>
    <Head title={siteTitle} description={siteDescription}/>
</head>
<body>
<div class="content-wrapper">
    <h1>{siteTitle}</h1>
    <p>{translations.indexPage.heroMain.subheading}</p>
    <div>
        <a href={deUrl}>Deutsch</a>
        <a href={enUrl}>English</a>
    </div>
</div>
</body>
</html>
